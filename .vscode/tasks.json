{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "src/main_refactored.cpp",
        "src/game_controller.cpp",
        "src/snake.cpp",
        "src/apple.cpp",
        "src/graphics.cpp",
        "src/rl/rl_interface.cpp",
        "-I",
        "include",
        "-o",
        "snakeGame.exe",
        "-lfreeglut",
        "-lopengl32",
        "-lgdi32"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build and run (human)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "src/main_refactored.cpp",
        "src/game_controller.cpp",
        "src/snake.cpp",
        "src/apple.cpp",
        "src/graphics.cpp",
        "src/rl/rl_interface.cpp",
        "-I",
        "include",
        "-o",
        "snakeGame.exe",
        "-lfreeglut",
        "-lopengl32",
        "-lgdi32",
        "&&",
        "./snakeGame.exe",
        "human"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build and run (RL)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "src/main_refactored.cpp",
        "src/game_controller.cpp",
        "src/snake.cpp",
        "src/apple.cpp",
        "src/graphics.cpp",
        "src/rl/rl_interface.cpp",
        "-I",
        "include",
        "-o",
        "snakeGame.exe",
        "-lfreeglut",
        "-lopengl32",
        "-lgdi32",
        "&&",
        "./snakeGame.exe",
        "rl"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    }
  ]
}
